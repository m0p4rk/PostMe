<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.postme.mapper.CommentMapper">

	<!-- 댓글 추가 -->
	<insert id="insertComment"
		parameterType="com.spring.postme.model.Comment">
		INSERT INTO Comments (postId, userId, content)
		VALUES (#{postId}, #{userId}, #{content})
	</insert>

	<!-- 특정 게시글의 댓글 목록 조회 -->
	<select id="findCommentsByPostId"
		resultType="com.spring.postme.model.Comment">
		SELECT * FROM Comments WHERE postId = #{postId}
	</select>

	<!-- 특정 댓글 조회 -->
	<select id="findCommentById"
		resultType="com.spring.postme.model.Comment">
		SELECT * FROM Comments WHERE id = #{id}
	</select>

	<!-- 댓글 업데이트 -->
	<update id="updateComment"
		parameterType="com.spring.postme.model.Comment">
		UPDATE Comments
		SET content = #{content}
		WHERE id = #{id}
	</update>

	<!-- 댓글 삭제 -->
	<delete id="deleteComment" parameterType="java.lang.Integer">
		DELETE FROM Comments WHERE id = #{id}
	</delete>

	<!-- postId에 해당하는 모든 댓글 삭제 -->
	<delete id="deleteByPostId" parameterType="int">
		DELETE FROM comments WHERE postId = #{postId}
	</delete>

	<!-- 모든 댓글의 개수 조회 -->
	<select id="countComments" resultType="int">
		SELECT COUNT(*) FROM Comments
	</select>

	<delete id="deleteAllComments">
		DELETE FROM comments
	</delete>
</mapper>
